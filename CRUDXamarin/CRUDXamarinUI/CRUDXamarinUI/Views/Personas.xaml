<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CRUDXamarinUI.Views.Personas">
    <ContentPage.Content>
        <StackLayout>
            
            <ListView x:Name="listaPersonas" 
                      ItemsSource="{Binding ListadoPersonas, Mode=OneWay}"
                      SelectedItem="{Binding PersonaSeleccionada}"
                      >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding Nombre}" TextColor="black" FontSize="15" Padding="10,5,5,5" />
                                <Label Text="{Binding Apellidos}" TextColor="black" FontSize="15" Padding="0,5,0,5" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>