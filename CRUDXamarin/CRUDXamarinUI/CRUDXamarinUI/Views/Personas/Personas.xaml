<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CRUDXamarinUI.Views.Personas"
             xmlns:viewmodelListado="clr-namespace:CRUDXamarinUI.Models">

    <ContentPage.BindingContext>
        <viewmodelListado:PersonasListadoVM/>
    </ContentPage.BindingContext>



    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="/Assets/add.svg" Text="Añadir" x:Name="btnNuevaPersona" Clicked="btnNuevaPersona_Clicked"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        
        <StackLayout>
 
            <ListView x:Name="listaPersonas" 
                      ItemsSource="{Binding ListadoPersonas, Mode=OneWay}"
                      SelectedItem="{Binding PersonaSeleccionada}"
                      >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" VerticalOptions="Center" Padding="10,10,0,10">
                                <Label Text="{Binding Nombre}" TextColor="black" FontSize="18"/>
                                <Label Text="{Binding Apellidos}" TextColor="black" FontSize="18"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
        </StackLayout>
        
    </ContentPage.Content>
    
</ContentPage>