<Page
    x:Class="u6NavigationUWP.Views.Page2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:u6NavigationUWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <CommandBar>
            <CommandBar.Content>
                <Button x:Name="BackButton" Click="Back_Click" Style="{StaticResource NavigationBackButtonNormalStyle}" VerticalAlignment="Top"/>
            </CommandBar.Content>
        </CommandBar>
        <TextBlock x:Name="pageTitle" HorizontalAlignment="Left" Margin="0,54,0,0" Text="Page2" TextWrapping="Wrap" VerticalAlignment="Top" Height="77" Width="156" FontSize="50" />
        <HyperlinkButton Content="Click to go to page 3" Click="HyperlinkButton_Click" Margin="10,121,0,0" VerticalAlignment="Top" Height="93" Width="414" FontSize="45"/>
    </Grid>
</Page>
