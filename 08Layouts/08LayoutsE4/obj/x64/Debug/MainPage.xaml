    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_08LayoutsE4"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <RelativePanel>

        <Border x:ConnectionId='2' x:Name="e1" 
                BorderBrush="Black" 
                BorderThickness="2"
                RelativePanel.AlignRightWithPanel="True"
                RelativePanel.AlignLeftWithPanel="True"
                Margin="10"
                >
            <TextBlock
                TextWrapping="Wrap"
                Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
                Margin="5"               
                >
                
            </TextBlock>
            
        </Border>

        <Border x:ConnectionId='3' x:Name="e2" 
                BorderBrush="Black" 
                BorderThickness="2"
                RelativePanel.Below="e1"
                RelativePanel.AlignRightWithPanel="True"
                RelativePanel.AlignLeftWithPanel="True"
                Margin="10"
                >
            <TextBlock 
                TextWrapping="Wrap"
                Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean sollicitudin risus tempus, semper nisl volutpat, tincidunt dui. Maecenas dignissim turpis mauris, quis mollis eros mollis auctor. Nam ultrices vulputate nibh, nec consequat massa porttitor vel."
                Margin="5"
                >

            </TextBlock>

        </Border>


    </RelativePanel>
</Page>

