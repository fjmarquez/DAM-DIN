                >

            </TextBlock>

        </Border>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>                
            </Grid.RowDefinitions>
            
            <VariableSizedWrapGrid Grid.Column="0" Orientation="Horizontal">
                <Rectangle x:Name="red" Fill="Red" Height="150" Width="150" Margin="10"/>
