            </VariableSizedWrapGrid>

            <StackPanel Orientation="Vertical" Grid.Column="1">
                <Border x:Name="e3" 
                BorderBrush="Black" 
                BorderThickness="2"
                RelativePanel.Below="e1"
                RelativePanel.AlignRightWithPanel="True"
                RelativePanel.AlignLeftWithPanel="True"
                Margin="10"
                >
                    <TextBlock 
