    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock x:Name="lblNombre" HorizontalAlignment="Left" Margin="29,36,0,0" Text="Nombre: " TextWrapping="Wrap" VerticalAlignment="Top" Height="42" Width="139" SelectionChanged="TextBlock_SelectionChanged" FontSize="30"/>
        <TextBox x:Name="txtNombre" HorizontalAlignment="Left" Margin="164,36,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="316" FontSize="30" PlaceholderText="Introduce tu nombre"/>
        <Button x:Name="btnSaludar" Content="Saludar" Margin="512,36,0,0" VerticalAlignment="Top" Height="53" Width="136" FontSize="30" Click="ButtonClicked"/>
        <TextBlock x:Name="lblAviso" HorizontalAlignment="Left" Margin="29,103,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="30" Width="516" Foreground="Red"/>

    </Grid>
</Page>
